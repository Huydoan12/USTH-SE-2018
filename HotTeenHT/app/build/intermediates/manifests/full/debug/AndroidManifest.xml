<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minhduc.fitnessapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="27" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.minhduc.fitnessapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.minhduc.fitnessapp.CustomWorkout"
            android:parentActivityName="com.example.minhduc.fitnessapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.minhduc.fitnessapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.minhduc.fitnessapp.NameYourWorkout"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.minhduc.fitnessapp.CustomWorkout" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.minhduc.fitnessapp.CustomWorkout" />
        </activity>
        <activity
            android:name="com.example.minhduc.fitnessapp.CreateNewWorkout"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.minhduc.fitnessapp.CustomWorkout" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.minhduc.fitnessapp.CustomWorkout" />
        </activity>
        <activity android:name="com.example.minhduc.fitnessapp.ChooseExercise" />
        <activity android:name="com.example.minhduc.fitnessapp.WorkoutDetail" />
    </application>

</manifest>